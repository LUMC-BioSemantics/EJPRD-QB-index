PREFIX obo: <http://purl.obolibrary.org/obo/>
PREFIX dcat: <http://www.w3.org/ns/dcat#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX dct: <http://purl.org/dc/terms/>
PREFIX foaf: <http://xmlns.com/foaf/0.1/>
PREFIX ejprd: <http://purl.org/ejp-rd/vocabulary/>
PREFIX fdp-o: <https://w3id.org/fdp/fdp-o#>

SELECT DISTINCT ?resource ?resource_name ?resource_type ?created_time ?updated_time  ?home_page ?theme ?resource_description ?resource_logo {
    
    ?resource a ?resource_type;
              rdfs:label ?resource_name;
              dcat:theme ?theme, ejprd:VPDiscoverable.
    FILTER (?resource_type != dcat:Resource) 
    
    OPTIONAL {
        ?resource dct:description ?resource_description; 
                        dcat:landingPage ?home_page;
                        dct:publisher [foaf:logo ?resource_logo];
                        fdp-o:metadataIssued ?created_time;
                        fdp-o:metadataModified ?updated_time.
    }
} ORDER BY ?resource